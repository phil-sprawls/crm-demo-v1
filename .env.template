# Databricks Unity Catalog Database Configuration
# Copy this file to .env and replace the placeholder values with your actual Databricks credentials

# Connection Settings
DATABRICKS_SERVER_HOSTNAME=your-workspace.cloud.databricks.com
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your-warehouse-id-here
DATABRICKS_TOKEN=your-access-token-here

# Database Configuration (optional - uses defaults if not specified)
DATABRICKS_CATALOG=corporate_information_technology_raw_dev_000
DATABRICKS_SCHEMA=developer_psprawls
DATABRICKS_TABLE_PREFIX=edip_crm

